<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.flavorplus.components.search.SearchBar
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/popular"
                app:layout_constraintTop_toBottomOf="@id/search_bar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:id="@+id/hsv_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_popular"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_popular"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:divider="@drawable/empty_divider"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/breakfast"
                app:layout_constraintTop_toBottomOf="@id/hsv_popular"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:id="@+id/hsv_breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_breakfast"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_breakfast"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:divider="@drawable/empty_divider"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/lunch"
                app:layout_constraintTop_toBottomOf="@id/hsv_breakfast"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:id="@+id/hsv_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_lunch"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_lunch"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:divider="@drawable/empty_divider"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/dinner"
                app:layout_constraintTop_toBottomOf="@id/hsv_lunch"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:id="@+id/hsv_dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_dinner"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_dinner"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:divider="@drawable/empty_divider"/>

            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</layout>